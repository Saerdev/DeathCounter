<Window x:Name="Main_Window" x:Class="DeathCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeathCounter"
        mc:Ignorable="d"
        Title="Death Counter" Height="48" Width="150" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" Foreground="#01000000" Loaded="MainWindow_Loaded" Closed="Window_Closed" HorizontalAlignment="Left">
    <Grid Margin="15,0,12,0">
        <Label x:Name="Death_Counter" FontFamily="{StaticResource FantomenPress}" TextOptions.TextRenderingMode="ClearType" Content="Deaths: 10000" Margin="-2,3,-6,8" Width="131" Background="Transparent" Foreground="White" FontSize="26"/>
        <Rectangle Height="48" Stroke="#03000000" Fill="#027D6161" MouseDown="Rectangle_MouseDown" MouseUp="Rectangle_MouseUp" MouseLeave="Rectangle_MouseLeave"/>

    </Grid>
</Window>
